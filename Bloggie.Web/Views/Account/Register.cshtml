@model Bloggie.Web.Models.ViewModels.RegisterViewModel

@{
}
<div class="container mx-auto">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-6">
            <h1 class="mt-3 mb-3 h3">Register</h1>
            <form method="post">
            <div>
                <label>Username</label>
                <input type="text" id="username"  class="form-control" asp-for="Username"/>
            </div>
              <div>
                <label>Email</label>
                <input type="text" id="email"  class="form-control" asp-for="Email"/>
            </div>
              <div>
                <label>Password</label>
                <input type="password" id="password"  class="form-control" asp-for="Password"/>
            </div>
             <div> 
                <button type="submit" class="btn btn-dark mt-2">Register</button>
            </div>
            </form>
        </div>
    </div>
</div>